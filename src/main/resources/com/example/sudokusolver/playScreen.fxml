<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../../../com.example.css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudokusolver.Controller.PlayScreenController">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" opacity="0.41" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../background.GIF" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Select a version" textFill="WHITE">
               <effect>
                  <DropShadow offsetX="2.0" offsetY="3.0" radius="4.75" width="0.0" />
               </effect>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchNormal" text="Normal" />
                  <Button mnemonicParsing="false" onAction="#playSound" text="Chess Rules" />
                  <Button mnemonicParsing="false" onAction="#playSound" text="Calcudoku" />
                  <Button mnemonicParsing="false" onAction="#playSound" text="Create" />
                  <Button mnemonicParsing="false" onAction="#playTaylor" text="Taylor's version" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#switchMain" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
